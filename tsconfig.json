{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ESNext"],
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "rootDir": "src",
      "outDir": "dist",
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "typeRoots": ["./src/declarations"],
  },
  "exclude": ["node_modules/**"]
}
