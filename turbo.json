{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "DBNAME",
    "DBHOST",
    "DBPASSWORD",
    "DBPORT",
    "DBUSER",
    "DEBUG",
    "NODE_ENV",
    "LOGGING_WEBHOOK",
    "CLIENT_TOKEN",
    "CLIENT_SECRET",
    "CLIENT_ID",
    "ERROR_CHANNEL",
    "VERCEL_URL",
    "WEBPACK",
    "CLIENT_ID",
    "EXPO_PUBLIC_CLIENT_ID",
    "EXPO_PUBLIC_VERCEL_URL",
    "EXPO_TOKEN",
    "CI",
    "APP_VARIANT",
    "REDIS_URL",
    "REDIS_PASSWORD",
    "PORT", 
    "PUBLIC_VERCEL_URL"
  ],
  "tasks": {
    "start": {
      "outputs": []
    },
    "lint": {},
    "lint:fix": {},
    "lint:typecheck": {},
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "update": {
      "env": ["EXPO_TOKEN", "CI", "BRANCH", "SENTRY_AUTH_TOKEN"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "dependsOn": ["^build"]
    },
    "db:push": { "inputs": ["tables/**"] },
    "db:create": {
      "inputs": ["tables/**"],
      "outputs": ["tables/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
