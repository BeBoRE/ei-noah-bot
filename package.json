{
  "name": "monorepo",
  "version": "1.0.0",
  "engines": {
    "node": ">=v18.17.0"
  },
  "packageManager": "pnpm@8.6.9",
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "dev": "dotenv -- turbo dev",
    "start": "dotenv -- turbo start --filter=bot --filter=website",
    "build": "dotenv -- turbo build",
    "expo-update": "dotenv -- turbo update",
    "lint": "dotenv -- turbo lint",
    "lint:fix": "dotenv -- turbo lint:fix",
    "lint:typecheck": "dotenv -- turbo lint:typecheck",
    "db:push": "dotenv -- turbo db:push",
    "db:create": "dotenv -- turbo db:create",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.28.0",
    "eslint-config-custom": "*",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "latest"
  },
  "dependencies": {
    "next": "^13.4.12"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "packages/database/mikro-orm.config.ts"
    ]
  }
}
